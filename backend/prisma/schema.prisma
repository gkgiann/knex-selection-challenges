generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma_client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deputy {
  id      String @id
  nome    String
  uf      String
  cpf     String @unique
  partido String

  expenses Expense[]
}

model Expense {
  id           String  @id
  dataEmissao  String
  fornecedor   String
  valorLiquido String
  urlDocumento String?
  deputadoId   String

  deputy Deputy @relation(fields: [deputadoId], references: [id])
}
