generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma_client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deputado {
  id       String    @id
  nome     String
  uf       String
  cpf      String    @unique
  partido  String
  despesas Despesa[]
}

model Despesa {
  id           String   @id
  dataEmissao  String
  fornecedor   String
  valorLiquido String
  urlDocumento String?
  deputadoId   String
  deputado     Deputado @relation(fields: [deputadoId], references: [id])
}
